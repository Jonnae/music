.detail-container{
  height: 320rpx;
  filter: blur(40rpx);
  opacity: 0.5;
 
}

.detail-mask{
  position: absolute;
  width: 100%;
  height: 320rpx;
  top: 0;
  left: 0;
  z-index: -1;
  background-color: gray;

}
.detail-image{
  width: 280rpx;
  height: 280rpx;
  margin-right: 24rpx;
  border-radius: 8rpx;
}
.detail-info{
  display: flex;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 320rpx;
  padding: 20rpx;
  box-sizing: border-box;
  align-items: center;
}
.detail{
  flex-grow: 1;
  line-height: 60rpx;
  width: 0;
}

.detail view{
  color: #fff;
  font-size: 24rpx;
}

.detail .detail-nm{
  font-size: 36rpx;
  font-weight: 400rpx;
}